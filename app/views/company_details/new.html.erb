<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
      <div class="card-header bg-primary text-light fw-bold"><h2>Company Details</h2></div>
      <div class="card-body">

        <%= form_with(model: @company_detail, local: true) do |form| %>
            <% if @company_detail.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@company_detail.errors.count, 'error') %> prohibited this company_detail_pah from being saved:</h2>
          
                <ul>
                  <% @company_detail.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
          
            <div class="form-group">
              <%= form.label :Company_Name, "Company Name <span class='text-danger'>*</span>".html_safe%>
              <%= form.text_field :company_name, id: :company_name, class: "form-control", required: true%>
            </div>
          
            <div class="form-group">
              <%= form.label :Company_Email,"Email <span class='text-danger'>*</span>".html_safe %>
              <%= form.text_field :company_email, id: :company_email, class: "form-control",required: true,  placeholder:"abc@gmail.com"%>
            </div>
          
            <div class="form-group">
              <%= form.label :Contact_Number, "Contact Number <span class='text-danger'>*</span>".html_safe %>
              <%= form.number_field :company_phone, id: :company_phone, class: "form-control",required: true,  placeholder:"xxx-xxx-xxxx" %>
            </div>

               <div class="form-group">
              <%= form.label :Company_Address, "Address<span class='text-danger'>*</span>".html_safe%>
              <%= form.text_area :company_address, id: :company_address, class: "form-control", required: true %>
            </div>

          
            <div class="form-group text-center">
              <%= form.submit "Add Company Details", class: "btn btn-warning fw-bold"%>
            </div>

          <% end %>
  
  
        </div>
      </div>
    </div>
  </div>
</div>