<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
      <div class="card-header"><h2>Add Profile</h2></div>
      <div class="card-body">
        <%= form_with(model: @profile, local: true) do |form| %>
            <% if @profile.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@profile.errors.count, 'error') %> prohibited this profile from being saved:</h2>
                <ul>
                  <% @profile.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
              <div class="form-group">
                  <%= form.label :name, "User Name <span class='text-danger'>*</span>".html_safe %>
                  <%= form.text_field :name, class: "form-control", required: true %>
              </div>

            <div class="form-group">
              <%= form.label :gender, "Gender <span class='text-danger'>*</span>".html_safe%>
              <%# <%= form.select :profile_gender, ['Male', 'Female'], prompt: 'Select gender', class: "form-control" %>
              <%= form.select :gender, [['Male', :male], ['Female', :female]] , required: true %>
            </div>
            <div class="form-group">
              <%= form.label :contact_number,"Contact Number <span class='text-danger'>*</span>".html_safe%>
              <%= form.number_field :contact_number, class: "form-control", required: true %>
            </div>
               <div class="form-group">
              <%= form.label :address, "Address <span class='text-danger'>*</span>".html_safe%>
              <%= form.text_area :address, class: "form-control", required: true %>
            </div>
            <div class="form-group text-center">
              <%= form.submit "ADD PROFILE", class: "btn btn-primary"%>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>



