<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header"><h2>Add Product</h2></div>
        <div class="card-body">

          <%= form_with(model: @product, local: true) do |form| %>
            <% if @product.errors.any? %>
              <div id="error_explanation" class="alert alert-danger">
                <h2><%= pluralize(@product.errors.count, 'error') %> prohibited this product from being saved:</h2>
                <ul>
                  <% @product.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="form-group">
              <%= form.label :name %>
              <%= form.text_field :name, id: :product_name, class: "form-control" %>
              <%= form.error_message_on :name, class: 'text-danger' %>
            </div>

            <div class="form-group">
              <%= form.label :description %>
              <%= form.text_area :description, id: :product_description, class: "form-control" %>
              <%= form.error_message_on :description, class: 'text-danger' %>
            </div>

            <div class="form-group">
              <%= form.label :price %>
              <%= form.text_field :price, id: :product_price, class: "form-control" %>
              <%= form.error_message_on :price, class: 'text-danger' %>
            </div>

            <div class="form-group">
              <%= form.label :category %>
              <%= form.select :category_id, Category.pluck(:name, :id), {}, class: "form-control" %>
              <%= form.error_message_on :category_id, class: 'text-danger' %>
            </div>

            <div class="form-group">
              <%= form.label :sub_category %>
              <%= form.select :subcategory_id, Subcategory.pluck(:name, :id), {}, class: "form-control" %>
              <%= form.error_message_on :subcategory_id, class: 'text-danger' %>
            </div>

            <div class="form-group">
              <%= form.label :image %>
              <%= form.file_field :image, class: "form-control" %>
              <%= form.error_message_on :image, class: 'text-danger' %>
            </div>

            <div class="field">
              <%= form.label :excel_file %>
              <%= form.file_field :excel_file %>
            </div>



            <div class="form-group text-center">
              <%= form.submit "ADD", class: "btn btn-primary" %>
            </div>
            <%= link_to "Back", :back , class:'btn btn-outline-primary'%>  
          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>
