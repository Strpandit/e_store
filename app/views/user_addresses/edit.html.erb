<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
      <div class="card-header bg-warning d-flex justify-content-between align-items-center">
             <h2>Edit address</h2>
              <%= link_to 'Back', user_addresses_path, class: 'btn btn-secondary' %>
        </div>
          <div class="card-body">
            <%= form_with(model: @user_address) do |form| %>
            
              <div class="form-group">
                  <%= form.label :address_name, "Name <span class='text-danger'>*</span>".html_safe %>
                  <%= form.text_field :address_name, class: "form-control" %>
              </div>

            <div class="form-group">
              <%= form.label :address_contact_number,"Contact Number <span class='text-danger'>*</span>".html_safe%>
              <%= form.number_field :address_contact_number, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= form.label :pincode, "Pincode <span class='text-danger'>*</span>".html_safe%>
              <%= form.number_field :pincode, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= form.label :state, "State <span class='text-danger'>*</span>".html_safe%>
              <%= form.text_field :state, class: "form-control" %>
            </div>
               <div class="form-group">
              <%= form.label :address, "Street, Apartment ( House no, Building no.) <span class='text-danger'>*</span>".html_safe%>
              <%= form.text_area :address, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= form.label :locality, "Locality <span class='text-danger'>*</span>".html_safe%>
              <%= form.text_field :locality, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= form.label :city, "city <span class='text-danger'>*</span>".html_safe%>
              <%= form.text_field :city, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= form.check_box :is_default %>
              <%= form.label :is_default, 'Set as Default Address' %><br>
            
              <%= form.check_box :is_primary, onchange: "this.form.submit()" %>
              <%= form.label :is_primary, "Set as Primary Address" %>
                  
            </div>
            

            <div class="form-group text-center">
              <%= form.submit "Edit  Address",class: "btn btn-success"%>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>



